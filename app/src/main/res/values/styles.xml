<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="GreenText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#12b909</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="BlueText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#1042f5</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">casual</item>
    </style>
    <style name="RedText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ff0106</item>
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">monospace</item>

    </style>
    <style name="PurpleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FF9C09B9</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
